<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.navigation.DrawerMenuActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_drawer_toolbar"
        style="@style/AppTheme.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- This layout will contain the view of each loaded fragment by the FragmentManager -->
    <RelativeLayout
        android:id="@+id/main_drawer_view_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_drawer_toolbar" />

</RelativeLayout>